{
    "name": "tobias/magento-simplexml",
    "description": "Simplexml component from Magento2",
    "type": "library",
    "keywords": [
        "magento",
        "simplexml",
		"xml"
    ],
    "homepage": "https://github.com/tobias-trozowski/magento-simplexml",
    "license": "BSD-3-Clause",
    "conflict": {
        "magento/project-community-edition": "*"
    },
    "require": {
        "php": ">=5.4",
		"ext-simplexml": "*"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "1.*",
        "phpunit/PHPUnit": "~4.5"
    },
    "autoload": {
        "psr-0": {
            "Magento\\Framework\\Simplexml\\": "library/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "MagentoTest\\Framework\\Simplexml\\": "tests/"
        }
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=./.php_cs --dry-run -v"
        ],
        "cs-fix": [
            "php-cs-fixer fix --config-file=./.php_cs -v"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev",
            "dev-develop": "1.1-dev"
        }
    }
}